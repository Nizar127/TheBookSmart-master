<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".booking_business">

    <TextView
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:text="Explore Your Solution"
        android:textSize="25sp"
        android:textStyle="bold" />
    <ImageView
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:src="@drawable/traveller"
        />

    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="300dp"
        android:layout_marginTop="10dp">

        <android.support.v7.widget.CardView
            android:layout_width="150dp"
            android:layout_height="250dp"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/categoryView"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:text="Data Analytics"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="18dp"

                />

            <ImageView
                android:id="@+id/categoryPic"
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/traveller"
                />

            <TextView
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="130dp"
                android:text="Get Info From The Best People Out There"
                android:textStyle="italic"
                android:textSize="15sp"

                />

            <Button
                android:id="@+id/exploreBiz"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="14dp"
                android:layout_marginBottom="13dp"
                android:background="@color/colorDetails"
                android:text="Explore"
                android:textColor="@color/colorText"
                android:textSize="18sp"
                android:textStyle="bold"
                />

        </android.support.v7.widget.CardView>

        <android.support.design.widget.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:menu="@menu/navigation_menu"
            android:layout_gravity="start"
            ></android.support.design.widget.NavigationView>

    </RelativeLayout>
</LinearLayout>