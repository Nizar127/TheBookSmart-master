<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">




    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/bizImg"
                android:layout_width="110dp"
                android:layout_height="105dp"
                android:src="@drawable/traveller"
                android:scaleType="centerCrop"
                android:layout_margin="3dp"
                />

            <RelativeLayout
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                >

                <TextView
                    android:id="@+id/availBiz"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginBottom="10dp"
                    android:text="Biz Title"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/availBizDetail"
                    android:layout_width="140dp"
                    android:layout_height="70dp"
                    android:layout_below="@+id/availBiz"
                    android:text="Description"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/viewPackage"
                    android:layout_width="125dp"
                    android:layout_height="45dp"
                    android:background="@color/colorSecondary"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/availBizDetail"
                    android:text="View Package"
                    android:textSize="15sp"

                    />

            </RelativeLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>